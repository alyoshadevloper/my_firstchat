extends layout

block content
  div(ng-controller='item', ng-init='init()')
    .ui.one.column.stackable.center.aligned.page.grid.margin-30
      .column.twelve.wide
        .ui.stacked.segment.gameArea
          .circle.blue(style="left:150px; top:100px")
            .relative
              span.name Asror
              .message Salom
          .circle.green(style="left:300px; top:100px")
            .relative
              span.name Behruz
              .message Salom qaleysan :)
          .circle.red(style="left:350px; top:300px")
            .relative
              span.name  
              .message Bu juda qiziqarli!!!!
        .ui.items.chat
          .item(ng-repeat='message in messages')
            .content(ng-if='!message.type')
              a.header.name | {{ message.username }}
              .description.message
               | chatga qoshildi

        .ui.action.input.fluid
          input(type="text" placeholder="Type here...")
          button.ui.button Send
